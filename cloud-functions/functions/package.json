{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "local": "functions-framework --target=getPosts",
    "firebase-serve-prod": "firebase use prod && cross-env GOOGLE_APPLICATION_CREDENTIALS='../GAPP_CREDS_PROD.json' firebase serve",
    "firebase-serve-dev": "firebase use dev && cross-env GOOGLE_APPLICATION_CREDENTIALS='../GAPP_CREDS_DEV.json' firebase serve"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
